<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1>Create New Post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-i/3 px-3 py-2 " type="file" name="postImage">
        <input class="block w-i/3 px-3 py-2 text-black border-2 rounded-md mt-2 " type="text" placeholder="title" name="title">
        <textarea class="block w-1/3 px-3 text-black py-2 h-40 border-2 rounded-md mt-2 " type="text" placeholder="description" name="description"></textarea>
        <input class="block w-i/3 px-3 py-2  rounded-md mt-2 bg-blue-700 " type="submit">
    </form>

</div>
<% include ./partials/footer.ejs %>